<?php xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="md_wishlistext_participant">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Wishlist participant ID"/>
        <column xsi:type="int" name="wishlist_item_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Wishlist item ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="Participant name"/>
        <column xsi:type="decimal" name="qty" scale="4" precision="12" nullable="false" comment="Participant item quantity"/>
        <column xsi:type="varchar" name="firstname" length="255" nullable="false" comment="Participant first name"/>
        <column xsi:type="varchar" name="lastname" length="255" nullable="false" comment="Participant last name"/>
        <column xsi:type="varchar" name="email" length="255" nullable="false" comment="Participant email name"/>
        <column xsi:type="text" name="comment" nullable="true" comment="Participant comment name"/>
        <column xsi:type="int" name="code_id" padding="10" unsigned="true" nullable="true" identity="false" comment="Code ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_53076D7B21653D5E7220AC7FB0A8B4C9" table="md_wishlistext_participant" column="wishlist_item_id" referenceTable="wishlist_item" referenceColumn="wishlist_item_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MD_WP_CID_DIRECTORY_MD_WC_CID" table="md_wishlistext_participant" column="code_id" referenceTable="md_wishlistext_code" referenceColumn="id" onDelete="CASCADE"/>
    </table>

    <table name="md_wishlistext_code">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="wishlist_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Wishlist ID"/>
        <column xsi:type="varchar" name="code" length="255" nullable="false" comment="Code"/>
        <column xsi:type="varchar" name="email" length="255" nullable="false" comment="Email"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MD_WC_WID_DIRECTORY_WI_WID" table="md_wishlistext_code" column="wishlist_id" referenceTable="wishlist" referenceColumn="wishlist_id" onDelete="CASCADE"/>
    </table>

    <table name="wishlist">
        <column xsi:type="timestamp" name="order_date" on_update="false" nullable="true" comment="Planned Order Date"/>
        <column xsi:type="text" name="comment" nullable="true" comment="Comment"/>
    </table>

    <table name="wishlist_item">
        <column xsi:type="decimal" name="owner_qty" scale="4" precision="12" unsigned="false" nullable="true" comment="Owner QTY"/>
    </table>

    <table name="quote_item">
        <column xsi:type="text" name="wishlist_participants" nullable="true" comment="Wishlis Participants"/>
    </table>
    <table name="sales_order_item">
        <column xsi:type="text" name="wishlist_participants" nullable="true" comment="Wishlis Participants"/>
    </table>
</schema>